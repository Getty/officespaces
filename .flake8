[flake8]
ignore = 
    # Ignore "imported but unused"
    F401,
    # Ignore "unable to detect undefined names"
    F403,
    # Ignore "may be undefined, or defined from star imports"
    F405,
    # Ignore "line too long"
    E501,
    # Ignore "line break occurred before a binary operator"
    W503,

# Exclude specific files or directories
exclude = 
    .git,
    __pycache__,
    migrations,
    venv

# Enable specific plugins or settings (optional)
select = 
    E,  # Only check for errors
    W   # Only check for warnings